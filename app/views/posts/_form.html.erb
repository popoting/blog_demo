<%= simple_form_for @post do |f| %>
<% if @post.errors.any? %>
<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
<ul>
  <% @post.errors.full_message.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<div class="skinny_wrapper wrapper_padding">
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.submit 'Save' %>
</div>

<% end %>
